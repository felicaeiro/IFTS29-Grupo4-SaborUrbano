doctype html
html(lang="es")
  head 
    link(rel="stylesheet", href="/css/styles.css")
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pedido.pago.tipoComprobante} — Sabor Urbano
    style.
      body {
        font-family: monospace;
        padding: 20px;
        background: #fff;
        color: #000;
      }
      .ticket, .factura {
        max-width: 380px;
        margin: 0 auto;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
      }
      h2, h3, p {
        margin: 0;
        text-align: center;
      }
      h2 {
        font-size: 20px;
        margin-bottom: 10px;
      }
      .linea {
        border-top: 1px dashed #999;
        margin: 10px 0;
      }
      .info {
        font-size: 14px;
        margin-bottom: 4px;
      }
      .total {
        font-weight: bold;
        font-size: 16px;
        margin-top: 10px;
        text-align: right;
      }
      .footer {
        text-align: center;
        font-size: 12px;
        margin-top: 20px;
        color: #555;
      }
      .btn-container{
          display: flex;
          margin: 30px;
          justify-content: center;
      }
      @media print {
        button { display: none; }
        body { background: white; }
      }

  body
    if pedido.pago.tipoComprobante === 'Factura'
      .factura
        h2 FACTURA
        h3 Sabor Urbano
        p.info CUIT: 30-12345678-9
        p.info Dirección: Av. del Sabor 123, Buenos Aires
        p.info Tel: (011) 5555-5555
        .linea
        p.info Fecha: #{new Date(pedido.pago.fecha).toLocaleDateString('es-AR')}
        p.info Cliente: #{pedido.id_cliente.nombre} #{pedido.id_cliente.apellido}
        p.info Medio de pago: #{pedido.pago.medio}
        p.info Pedido N° #{pedido._id}
        .linea
        p.total Total: $#{pedido.pago.monto}
        .footer ¡Gracias por elegirnos!
      div.btn-container
        button.btn(type="button", onclick="window.print()") Imprimir factura
    else
      .ticket
        h2 TICKET
        h3 Sabor Urbano
        p.info Fecha: #{new Date(pedido.pago.fecha).toLocaleDateString('es-AR')}
        p.info Nro de comprobante: #{pedido.pago.nroComprobante}
        p.info Pedido N° #{pedido._id}
        p.info Medio de pago: #{pedido.pago.medio}
        .linea
        p.total Total: $#{pedido.pago.monto}
        .footer ¡Gracias por elegirnos!
      div.btn-container
        button.btn(type="button", onclick="window.print()") Imprimir ticket
