doctype html
html
  head
    //- link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")

    title Pedidos

  body
    header.header
      h2 Pedidos finalizados
      div
        if usuario === 'admin'
                div.div-menu
                a(href="/inicio").a-inicio Inicio
                a(href="/productos").a-inicio Productos
                a(href="/pedidos").a-inicio Pedidos
                a(href="/clientes").a-inicio Clientes
                a(href="/caja").a-inicio Pagos
                a(href="/informe").a-inicio Informes
        span Bienvenido #{usuario}
        form(method="POST", action="/logout")
          button(type="submit") Cerrar sesi√≥n


    a(href="/pedidos")
      button.btn Volver a la lista de pedidos

    .ul-pedidos
      each pedido in pedidos
        li.li-pedidos
          p
            strong Fecha:
            | #{new Date(pedido.fecha).toLocaleDateString('es-AR')}
          
          p
            strong Tipo:
            | #{pedido.tipo}
          
          p
            strong Cliente:
            | #{pedido.id_cliente ? pedido.id_cliente.nombre + ' ' + pedido.id_cliente.apellido : 'Sin cliente'}

          p
            strong Productos:
            ul.ul-productos
              each p in pedido.productos
                if p.producto
                  li #{p.cantidad} #{p.nombre} ($#{p.precio})
                else
                  li Producto no encontrado
          p
            strong Total:
            | $#{pedido.total}
        