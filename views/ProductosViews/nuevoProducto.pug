doctype html
html
    head
        title Detalle del producto
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/styles.css")

    body
    header.header
      h2 Nuevo producto
      div
        if usuario === 'admin'
              div.div-menu
                a(href="/inicio").a-inicio Inicio
                a(href="/productos").a-inicio Productos
                a(href="/pedidos").a-inicio Pedidos
                a(href="/clientes").a-inicio Clientes
                a(href="/caja").a-inicio Pagos
                a(href="/informe").a-inicio Informes
        span Bienvenido #{usuario}
        form(method="POST", action="/logout")
          button(type="submit") Cerrar sesión

    form.form-nuevoPedido(method="POST", action="/productos")
      div.div-top
        div.div-element
            label(for="nombre") Nombre
            input#nombre(type="text", name="nombre", required=true, placeholder="Ej: Milanesa con fritas")

        div.div-element
            label(for="descripcion") Descripción
            textarea#descripcion(name="descripcion", rows="3", required=true, placeholder="Descripción del producto")

        div.div-element
            label(for="precio") Precio ($)
            input#precio(type="number", step="0.01", name="precio", required=true, placeholder="Ej: 3500")
        
      br

      div.form-div-btn.form-div-btn-nuevoCliente
        button.btn(type="submit") Crear Producto
    
    a(href="/productos")
      button.btn.btn-last Volver a la lista de productos
    
    if error
        div.modal.fade(id="modalErrorProducto", tabindex="-1")
          div.modal-dialog
            div.modal-content
              div.modal-header
                h5.modal-title Error
                button.btn-close(type="button", data-bs-dismiss="modal")
              div.modal-body
                p #{error}
              div.modal-footer
                button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Cerrar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

    if error
      script.
        const modalError = new bootstrap.Modal(document.getElementById('modalErrorProducto'));
        modalError.show();