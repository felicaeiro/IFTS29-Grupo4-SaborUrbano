doctype html
html
    head
        title Nuevo Pedido
        link(rel="stylesheet", href="/css/styles.css")
    body
        h1 Editar pedido

        form.form-nuevoPedido(action=`/pedidos/${pedido.id}?_method=PUT`, method="POST")
            div.div-top
                div.div-element
                    label(for="fecha") Fecha:
                    input.form-input(type="date" name="fecha" value=pedido.fecha)

                div.div-element
                    label(for="id_cliente") Cliente:
                    input.form-input(type="number" name="id_cliente" value=pedido.id_cliente)

                div.div-element
                    label(for="total") Total:
                    input.form-input(type="number" step="0.01" name="total" value=pedido.total)
                
                div.div-element
                    label(for="tipo") Tipo:
                    select.form-input(name="tipo")
                        option(value="Presencial" selected=(pedido.tipo === 'Presencial')) Presencial
                        option(value="Online" selected=(pedido.tipo === 'Online')) Online
                        
            br

            div.div-bottom
                    each p in productos
                        div
                            input(type="checkbox" name="productos" value=p.id checked=pedido.productos.includes(p.id))
                            | #{p.nombre}

            div.form-div-btn
                button.btn(type="submit") Guardar cambios
                
        a(href="/pedidos")
            button.btn.btn-last Volver a la lista de pedidos

